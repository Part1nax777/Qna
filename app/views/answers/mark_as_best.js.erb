<% if @answer.best? %>
  $('<%="#answer-#{ @answer.id }" %>').addClass('best');
  $('.mark-as-best').removeClass('hidden');
  $(".mark-as-best[data-answer-id='<%= @answer.id %>']").addClass('hidden');
  $('#answer-<%= @answer.id %>').remove();
  $('.answers').prepend('<%= j render @answer %>');
<% end %>
